<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_pasteles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastelActivity">

    <Button
        android:id="@+id/btn_crear_list_pasteles"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:text="Crear"
        app:layout_constraintBottom_toTopOf="@+id/lv_list_pasteles"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_pasteles"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lv_list_pasteles"
        app:layout_constraintTop_toBottomOf="@+id/tv_pastelerias" />

    <TextView
        android:id="@+id/tv_pastelerias"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Pasteles"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <ListView
        android:id="@+id/lv_list_pasteles"
        android:layout_width="327dp"
        android:layout_height="403dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pastelerias"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/tv_pastelerias"
        app:layout_constraintTop_toBottomOf="@+id/tv_pastelerias" />
</androidx.constraintlayout.widget.ConstraintLayout>