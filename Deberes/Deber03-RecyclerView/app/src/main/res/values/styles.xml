<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo personalizado para el texto de los items del menú -->
    <style name="NavMenuItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Puedes agregar más personalizaciones aquí -->
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearance">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item> <!-- Ajusta este valor según necesites -->
    </style>

    <style name="CustomBottomNavigationView1" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">#8b8e93</item>
        <item name="android:textColor">#8b8e93</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

</resources>